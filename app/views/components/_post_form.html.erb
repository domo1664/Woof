    <div class="col-sm-12">
      <%= form_for(@newPost) do |f| %>
        <div class="field" style="margin-left: 10px;">
          <%= f.text_field :content, autofocus: true, class: "form-control", placeholder: "talk that talk..." %>
        </div>
      <% end %>
    </div>

  </div>
</div>



